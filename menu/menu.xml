<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Script file="menu.lua"/>

  <!-- Menu -->
  <Frame name="SimpleMacroMenu" toplevel="true" movable="true" parent="UIParent" enableMouse="true" hidden="true" inherits="ButtonFrameTemplate">
    <Size x="350" y="524"/>
    <Layers>
      <Layer level="OVERLAY" textureSubLevel="-1">
        <Texture name="MacroFramePortrait" file="Interface\MacroFrame\MacroFrame-Icon">
          <Size x="60" y="60"/>
          <Anchors>
            <Anchor point="TOPLEFT" x="-5" y="5"/>
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="BORDER">
        <FontString inherits="GameFontNormal" text="SIMPLE_MACRO_STRING_MENU_TITLE">
          <Anchors>
            <Anchor point="TOP" relativeTo="SimpleMacroMenu" x="0" y="-5"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Frame name="$parentPanelContainer"/>
      <Button name="$parentTab1" inherits="PanelTabButtonTemplate" id="1" text="SIMPLE_MACRO_STRING_CREATE">
        <Anchors>
          <Anchor point="TOPLEFT" x="54" y="-20"/>
        </Anchors>
        <Scripts>
          <OnClick>
            SimpleMacroMenuTab_OnClick(self)
            PlaySound(SOUNDKIT.IG_CHARACTER_INFO_TAB)
          </OnClick>
        </Scripts>
      </Button>
      <Button name="$parentTab2" inherits="PanelTabButtonTemplate" id="2" text="SIMPLE_MACRO_STRING_GROUP">
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parentTab1" relativePoint="RIGHT" x="-16" y="0"/>
        </Anchors>
        <Scripts>
          <OnClick>
            SimpleMacroMenuTab_OnClick(self)
            PlaySound(SOUNDKIT.IG_CHARACTER_INFO_TAB)
          </OnClick>
        </Scripts>
      </Button>
      <Button name="$parentExitButton" inherits="UIPanelButtonTemplate" text="SIMPLE_MACRO_STRING_EXIT">
        <Size x="86" y="22"/>
        <Anchors>
          <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-5" y="4"/>
        </Anchors>
        <Scripts>
          <OnClick function="SM_ExitButton_OnClick"/>
        </Scripts>
      </Button>
    </Frames>
    <Scripts>
      <OnLoad function="SimpleMacroMenu_OnLoad"/>
      <OnShow function="SimpleMacroMenu_OnShow"/>
      <OnHide function="SimpleMacroMenu_OnHide"/>
      <OnDragStart>
        self:StartMoving()
      </OnDragStart>
      <OnDragStop>
        self:StopMovingOrSizing()
      </OnDragStop>
    </Scripts>
  </Frame>
</Ui>