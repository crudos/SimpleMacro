<Ui xmlns="http://www.blizzard.com/wow/ui/">
   <Script file="grouptab.lua"/>
      <!-- GROUP TAB -->
   <Frame name="$parentGroupTab" hidden="true" parent="SimpleMacroMenu">
      <Anchors>
         <Anchor point="TOPLEFT"/>
         <Anchor point="BOTTOMRIGHT"/>
      </Anchors>
      <Frames>
         <ScrollFrame name="$parentUserScrollFrame" inherits="UIPanelScrollFrameTemplate">
            <Size x="292" y="146"/>
            <Anchors>
               <Anchor point="TOPRIGHT">
                  <Offset x="-40" y="-64"/>
               </Anchor>
            </Anchors>
            <ScrollChild>
               <Frame name="SM_UserButtons">
                  <Size x="235" y="10"/>
                  <Anchors>
                     <Anchor point="TOPLEFT"/>
                  </Anchors>
                  <Scripts>
                     <OnLoad function="SM_UserButtons_OnLoad"/>
                  </Scripts>
               </Frame>
            </ScrollChild>
            <Scripts>
               <OnLoad function="ScrollFrame_OnLoad"/>
            </Scripts>
         </ScrollFrame>
         <Button name="$parentTab1" inherits="OptionsFrameTabButtonTemplate" id="1" text="Account">
            <Anchors>
               <Anchor point="BOTTOMLEFT" relativeTo="$parentUserScrollFrame" relativePoint="TOPLEFT">
                  <Offset>
                     <AbsDimension x="2" y="2"/>
                  </Offset>
               </Anchor>
            </Anchors>
            <Scripts>
               <OnClick>
                  SM_GroupTabAccountMacroTab_OnClick(self)
                  PlaySound("igCharacterInfoTab")
               </OnClick>
            </Scripts>
         </Button>
         <Button name="$parentTab2" inherits="OptionsFrameTabButtonTemplate" id="2" text="Character">
            <Anchors>
               <Anchor point="LEFT" relativeTo="$parentTab1" relativePoint="RIGHT">
                  <Offset>
                     <AbsDimension x="-16" y="0"/>
                  </Offset>
               </Anchor>
            </Anchors>
            <Scripts>
               <OnClick>
                  SM_GroupTabCharacterMacroTab_OnClick(self)
                  PlaySound("igCharacterInfoTab")
               </OnClick>
            </Scripts>
         </Button>
         <ScrollFrame name="$parentGroupScrollFrame" inherits="UIPanelScrollFrameTemplate">
            <Size x="292" y="146"/>
            <Anchors>
               <Anchor point="TOP" relativeTo="$parentUserScrollFrame" relativePoint="BOTTOM">
                  <Offset>
                     <AbsDimension x="0" y="-66"/>
                  </Offset>
               </Anchor>
            </Anchors>
            <ScrollChild>
               <Frame name="SM_GroupButtons">
                  <Size x="235" y="10"/>
                  <Anchors>
                     <Anchor point="TOPLEFT"/>
                  </Anchors>
                  <Scripts>
                     <OnLoad function="SM_GroupButtons_OnLoad"/>
                  </Scripts>
               </Frame>
            </ScrollChild>
            <Scripts>
               <OnLoad function="ScrollFrame_OnLoad"/>
            </Scripts>
         </ScrollFrame>
         <Button name="SM_GroupAddButton" frameStrata="HIGH" inherits="UIPanelButtonTemplate" text="Add To Group">
            <Size>
               <AbsDimension x="292" y="22"/>
            </Size>
            <Anchors>
               <Anchor point="TOP" relativeTo="$parentUserScrollFrame" relativePoint="BOTTOM">
                  <Offset>
                     <AbsDimension x="0" y="-8"/>
                  </Offset>
               </Anchor>
            </Anchors>
            <Scripts>
               <OnClick function="SM_GroupAddButton_OnClick"/>
            </Scripts>
         </Button>
         <Button name="SM_GroupDeleteButton" inherits="UIPanelButtonTemplate" text="Delete From Group">
            <Size>
               <AbsDimension x="292" y="22"/>
            </Size>
            <Anchors>
               <Anchor point="TOP" relativeTo="$parentGroupScrollFrame" relativePoint="BOTTOM">
                  <Offset>
                     <AbsDimension x="0" y="-8"/>
                  </Offset>
               </Anchor>
            </Anchors>
            <Scripts>
               <OnClick function="SM_GroupDeleteButton_OnClick"/>
            </Scripts>
         </Button>
         <Button name="SM_GroupTargetButton" frameStrata="HIGH" inherits="UIPanelButtonTemplate" text="Change Target">
            <Size>
               <AbsDimension x="164" y="22"/>
            </Size>
            <Anchors>
               <Anchor point="TOPLEFT" relativeTo="SM_GroupDeleteButton" relativePoint="BOTTOMLEFT">
                  <Offset>
                     <AbsDimension x="0" y="-6"/>
                  </Offset>
               </Anchor>
            </Anchors>
            <Scripts>
               <OnClick function="SM_GroupTargetButton_OnClick"/>
            </Scripts>
         </Button>
         <EditBox name="SM_GroupTargetText" inherits="InputBoxTemplate">
            <Size>
               <AbsDimension x="112" y="22"/>
            </Size>
            <Anchors>
               <Anchor point="LEFT" relativeTo="SM_GroupTargetButton" relativePoint="RIGHT">
                  <Offset>
                     <AbsDimension x="16" y="0"/>
                  </Offset>
               </Anchor>
            </Anchors>
            <Scripts>
               <OnLoad>
                  self:SetAutoFocus(false)
               </OnLoad>
            </Scripts>
         </EditBox>
      </Frames> 
      <Scripts>
         <OnLoad function="SM_GroupTab_OnLoad"/>
         <OnShow function="SM_GroupTab_OnShow"/>
      </Scripts>
   </Frame>
</Ui>