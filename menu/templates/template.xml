<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Script file="template.lua"/>
  <!-- Templates -->
  <Button name="SimpleMacroTabButtonTemplate" mixin="PanelTabButtonMixin" motionScriptsWhileDisabled="true" parentArray="Tabs" virtual="true">
    <Size x="41" y="36"/>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="LeftActive" atlas="uiframe-activetab-left" parentArray="TabTextures">
          <Size x="20" y="42"/>
          <Anchors>
            <Anchor point="TOPLEFT"/>
          </Anchors>
        </Texture>
        <Texture parentKey="RightActive" atlas="uiframe-activetab-right" parentArray="TabTextures">
          <Size x="20" y="42"/>
          <Anchors>
            <Anchor point="TOPRIGHT"/>
          </Anchors>
        </Texture>
        <Texture parentKey="MiddleActive" atlas="_uiframe-activetab-center" horizTile="true" parentArray="TabTextures">
          <Size x="1" y="42"/>
          <Anchors>
            <Anchor point="LEFT" relativeKey="$parent.LeftActive" relativePoint="RIGHT"/>
            <Anchor point="RIGHT" relativeKey="$parent.RightActive" relativePoint="LEFT"/>
          </Anchors>
        </Texture>
        <Texture parentKey="Left" atlas="uiframe-tab-left" parentArray="TabTextures">
          <Size x="20" y="36"/>
          <Anchors>
            <Anchor point="TOPLEFT"/>
          </Anchors>
        </Texture>
        <Texture parentKey="Right" atlas="uiframe-tab-right" parentArray="TabTextures">
          <Size x="20" y="36"/>
          <Anchors>
            <Anchor point="TOPRIGHT"/>
          </Anchors>
        </Texture>
        <Texture parentKey="Middle" atlas="_uiframe-tab-center" horizTile="true" parentArray="TabTextures">
          <Size x="1" y="36"/>
          <Anchors>
            <Anchor point="LEFT" relativeKey="$parent.Left" relativePoint="RIGHT"/>
            <Anchor point="RIGHT" relativeKey="$parent.Right" relativePoint="LEFT"/>
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="HIGHLIGHT">
        <Texture parentKey="LeftHighlight" atlas="uiframe-tab-left" alphaMode="ADD" alpha="0.4" parentArray="TabTextures">
          <Size x="20" y="36"/>
          <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent.Left"/>
          </Anchors>
        </Texture>
        <Texture parentKey="RightHighlight" atlas="uiframe-tab-right" alphaMode="ADD" alpha="0.4" parentArray="TabTextures">
          <Size x="20" y="36"/>
          <Anchors>
            <Anchor point="TOPRIGHT" relativeKey="$parent.Right"/>
          </Anchors>
        </Texture>
        <Texture parentKey="MiddleHighlight" atlas="_uiframe-tab-center" horizTile="true" alphaMode="ADD" alpha="0.4" parentArray="TabTextures">
          <Size x="1" y="36"/>
          <Anchors>
            <Anchor point="LEFT" relativeKey="$parent.Middle" relativePoint="LEFT"/>
            <Anchor point="RIGHT" relativeKey="$parent.Middle" relativePoint="RIGHT"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad method="OnLoad"/>
      <OnEvent method="OnEvent"/>
      <OnShow method="OnShow"/>
      <OnEnter method="OnEnter"/>
      <OnLeave method="OnLeave"/>
    </Scripts>
    <ButtonText parentKey="Text">
      <Size x="0" y="10"/>
      <Anchors>
        <Anchor point="CENTER" x="0" y="2"/>
      </Anchors>
    </ButtonText>
    <NormalFont style="GameFontNormalSmall"/>
    <HighlightFont style="GameFontHighlightSmall"/>
    <DisabledFont style="GameFontHighlightSmall"/>
  </Button>
  <Button name="SimpleMacroTopTabButtonTemplate" inherits="SimpleMacroTabButtonTemplate" mixin="SimpleMacroTopTabButtonMixin" virtual="true"/>
  <CheckButton name="SimpleMacroButtonTemplate" mixin="SimpleMacroButtonMixin" inherits="SelectorButtonTemplate" virtual="true">
    <Layers>
      <Layer level="OVERLAY">
        <FontString parentKey="Name" inherits="GameFontHighlightSmallOutline">
          <Size x="36" y="10"/>
          <Anchors>
            <Anchor point="BOTTOM" x="0" y="2"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnClick method="OnClick"/>
      <OnLoad method="OnLoad"/>
      <OnDragStart method="OnDragStart"/>
    </Scripts>
  </CheckButton>
  <CheckButton name="SimpleMacroBaseCheckButtonTemplate" inherits="OptionsBaseCheckButtonTemplate" virtual="true">
    <Scripts>
      <OnClick>
        if self:GetChecked() then
          PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON)
        else
          PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_OFF)
        end
        SM_CheckButton_OnClick(self)
      </OnClick>
    </Scripts>
  </CheckButton>
  <CheckButton name="SimpleMacroCheckButtonTemplate" inherits="SimpleMacroBaseCheckButtonTemplate" virtual="true">
    <Layers>
      <Layer level="ARTWORK">
        <FontString name="$parentText" inherits="GameFontHighlight">
          <Anchors>
            <Anchor point="LEFT" relativePoint="RIGHT" x="0" y="1"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </CheckButton>
  <CheckButton name="SimpleMacroSmallCheckButtonTemplate" inherits="SimpleMacroBaseCheckButtonTemplate" virtual="true">
    <Layers>
      <Layer level="ARTWORK">
        <FontString name="$parentText" inherits="GameFontHighlightSmall">
          <Anchors>
            <Anchor point="LEFT" relativePoint="RIGHT" x="0" y="4"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </CheckButton>
  <CheckButton name="SM_ListEntryTemplate" inherits="OptionsListButtonTemplate" virtual="true">
    <Size x="244" y="16"/>
    <Layers>
      <Layer level="CONTENT">
        <FontString name="$parentNumber" inherits="GameFontHighlightSmall" text="SIMPLE_MACRO_STRING_NUMBER">
          <Anchors>
            <Anchor point="LEFT" x="16" y="0"/>
          </Anchors>
        </FontString>
        <FontString name="$parentInfo" inherits="GameFontHighlightSmall" text="SIMPLE_MACRO_STRING_COMMAND">
          <Anchors>
            <Anchor point="LEFT" relativeTo="$parentNumber" relativePoint="RIGHT" x="24" y="0"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </CheckButton>
  <CheckButton name="LineEntryTemplate" inherits="SM_ListEntryTemplate" virtual="true">
    <Scripts>
      <OnClick>
        LineListEntry_OnClick(self, button, down)
      </OnClick>
    </Scripts>
  </CheckButton>
  <CheckButton name="ArgEntryTemplate" inherits="SM_ListEntryTemplate" virtual="true">
    <Scripts>
      <OnClick>
        ArgListEntry_OnClick(self, button, down)
      </OnClick>
    </Scripts>
  </CheckButton>
  <CheckButton name="CondEntryTemplate" inherits="SM_ListEntryTemplate" virtual="true">
    <Scripts>
      <OnClick>
        <!-- CondListEntry_OnClick(self, button, down) -->
      </OnClick>
    </Scripts>
  </CheckButton>
  <CheckButton name="SM_MacroEditorEntryTemplate" inherits="OptionsListButtonTemplate" virtual="true">
    <Size x="92" y="16"/>
    <Layers>
      <Layer level="CONTENT">
        <FontString name="$parentData" inherits="GameFontHighlightSmall" text="SIMPLE_MACRO_STRING_ERROR">
          <Anchors>
            <Anchor point="CENTER" x="0" y="0"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </CheckButton>
  <CheckButton name="SM_MacroEditorLineEntryTemplate" inherits="SM_MacroEditorEntryTemplate" virtual="true">
    <Scripts>
      <OnClick>
        SM_MacroEditorLine_OnClick(self, button, down)
      </OnClick>
    </Scripts>
  </CheckButton>
  <CheckButton name="SM_MacroEditorArgEntryTemplate" inherits="SM_MacroEditorEntryTemplate" virtual="true">
    <Scripts>
      <OnClick>
        SM_MacroEditorArg_OnClick(self, button, down)
      </OnClick>
    </Scripts>
  </CheckButton>
  <Frame name="SimpleMacroPopupFrameTemplate" virtual="true">
    <KeyValues>
      <!--
      <KeyValue key="OnCancel" value="FooFrame_OnCancel" type="global"/>
      <KeyValue key="OnOkay" value="FooFrame_OnOkay" type="global"/>
      <KeyValue key="OnDelete" value="FooFrame_OnDelete" type="global"/>
      -->
    </KeyValues>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="BG">
          <Anchors>
            <Anchor point="TOPLEFT" x="7" y="-7"/>
            <Anchor point="BOTTOMRIGHT" x="-7" y="7"/>
          </Anchors>
          <Color r="0" g="0" b="0" a=".80"/>
        </Texture>
      </Layer>
      <Layer level="BORDER">
        <Texture parentKey="TopLeft" atlas="macropopup-topleft2" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPLEFT"/>
          </Anchors>
        </Texture>
        <Texture parentKey="TopRight" atlas="macropopup-topright2" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPRIGHT" x="0" y="0"/>
          </Anchors>
        </Texture>
        <Texture atlas="_macropopup-top2" horizTile="true" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent.TopLeft" relativePoint="TOPRIGHT" x="0" y="0"/>
            <Anchor point="TOPRIGHT" relativeKey="$parent.TopRight" relativePoint="TOPLEFT" x="0" y="0"/>
          </Anchors>
        </Texture>
        <Texture atlas="_macropopup-top2" horizTile="true" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent.TopLeft" relativePoint="TOPRIGHT" x="0" y="-23"/>
            <Anchor point="TOPRIGHT" relativeKey="$parent.TopRight" relativePoint="TOPLEFT" x="0" y="-23"/>
          </Anchors>
        </Texture>
        <Texture parentKey="LeftIntersect" atlas="macropopup-intersect-left" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOP" relativeKey="$parent.TopLeft" relativePoint="BOTTOM" x="0" y="30"/>
          </Anchors>
        </Texture>
        <Texture  parentKey="RightIntersect" atlas="macropopup-intersect-right" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOP" relativeKey="$parent.TopRight" relativePoint="BOTTOM" x="0" y="30"/>
          </Anchors>
        </Texture>
        <Texture parentKey="BottomLeft" atlas="macropopup-bottomleft" useAtlasSize="true">
          <Anchors>
            <Anchor point="BOTTOMLEFT" x="0" y="0"/>
          </Anchors>
        </Texture>
        <Texture parentKey="BottomRight" atlas="macropopup-bottomright" useAtlasSize="true">
          <Anchors>
            <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
          </Anchors>
        </Texture>
        <Texture atlas="_macropopup-bottom" horizTile="true" useAtlasSize="true">
          <Anchors>
            <Anchor point="BOTTOMLEFT" relativeKey="$parent.BottomLeft" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
            <Anchor point="BOTTOMRIGHT" relativeKey="$parent.BottomRight" relativePoint="BOTTOMLEFT" x="0" y="0"/>
          </Anchors>
        </Texture>
        <Texture atlas="!macropopup-left" vertTile="true" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent.LeftIntersect" relativePoint="BOTTOMLEFT" x="0" y="0"/>
            <Anchor point="BOTTOMLEFT" relativeKey="$parent.BottomLeft" relativePoint="TOPLEFT" x="0" y="0"/>
          </Anchors>
        </Texture>
        <Texture atlas="!macropopup-right" vertTile="true" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPRIGHT" relativeKey="$parent.RightIntersect" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
            <Anchor point="BOTTOMRIGHT" relativeKey="$parent.BottomRight" relativePoint="TOPRIGHT" x="0" y="0"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Frames>
      <Button parentKey="CancelButton" inherits="UIPanelButtonNoTooltipTemplate" text="SIMPLE_MACRO_STRING_CANCEL">
        <Size x="78" y="22"/>
        <Anchors>
          <Anchor point="BOTTOMRIGHT" x="-11" y="13"/>
        </Anchors>
        <Scripts>
          <OnClick function="SimpleMacroPopupFrameCancelButton_OnClick"/>
        </Scripts>
      </Button>
      <Button parentKey="OkayButton" inherits="UIPanelButtonNoTooltipTemplate" text="SIMPLE_MACRO_STRING_OKAY">
        <Size x="78" y="22"/>
        <Anchors>
          <Anchor point="RIGHT" relativeKey="$parent.CancelButton" relativePoint="LEFT" x="-2" y="0"/>
        </Anchors>
        <Scripts>
          <OnClick function="SimpleMacroPopupFrameOkayButton_OnClick"/>
        </Scripts>
      </Button>
      <Button parentKey="DeleteButton" inherits="UIPanelButtonNoTooltipTemplate" text="SIMPLE_MACRO_STRING_DELETE">
        <Size x="78" y="22"/>
        <Anchors>
          <Anchor point="BOTTOMLEFT" x="11" y="13"/>
        </Anchors>
        <Scripts>
          <OnClick function="SimpleMacroPopupFrameDeleteButton_OnClick"/>
        </Scripts>
      </Button>
    </Frames>
  </Frame>
  <Frame name="SimpleMacroDropDownTemplate" inherits="UIDropDownMenuTemplate" virtual="true">
    <Layers>
      <Layer level="BACKGROUND">
        <FontString parentKey="Label" inherits="GameFontHighlight">
          <Anchors>
            <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" x="16" y="3"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnEnter>
        if not self.isDisabled then
          GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT")
          GameTooltip:SetText(self.tooltip, nil, nil, nil, nil, 1)
        end
      </OnEnter>
      <OnLeave function="GameTooltip_Hide"/>
    </Scripts>
  </Frame>
  <Frame name="SimpleMacroEditorPopupDropDownTemplate" inherits="SimpleMacroDropDownTemplate" virtual="true">
    <Scripts>
      <OnLoad>
        self:RegisterEvent("PLAYER_ENTERING_WORLD")
      </OnLoad>
    </Scripts>
  </Frame>
  <Frame name="SimpleMacroEditorPopupConditionalDropDownTemplate" inherits="SimpleMacroDropDownTemplate" virtual="true">
    <Scripts>
      <OnLoad function="SimpleMacroEditorConditionalPopup_DropDown_OnLoad" />
    </Scripts>
  </Frame>
  <EditBox name="SimpleMacroEditorPopupEditBoxTemplate" inherits="AutoCompleteEditBoxTemplate" virtual="true">
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="TopLeft" atlas="chatbubble-nineslice-cornertopleft" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPLEFT" x="-6" y="0"/>
          </Anchors>
        </Texture>
        <Texture parentKey="TopRight" atlas="chatbubble-nineslice-cornertopright" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPRIGHT" x="6" y="0"/>
          </Anchors>
        </Texture>
        <Texture parentKey="BottomLeft" atlas="chatbubble-nineslice-cornerbottomleft" useAtlasSize="true">
          <Anchors>
            <Anchor point="BOTTOMLEFT" x="-6" y="0"/>
          </Anchors>
        </Texture>
        <Texture parentKey="BottomRight" atlas="chatbubble-nineslice-cornerbottomright" useAtlasSize="true">
          <Anchors>
            <Anchor point="BOTTOMRIGHT" x="6" y="0"/>
          </Anchors>
        </Texture>
        <Texture atlas="_chatbubble-nineslice-edgetop" horizTile="true" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent.TopLeft" relativePoint="TOPRIGHT"/>
            <Anchor point="TOPRIGHT" relativeKey="$parent.TopRight" relativePoint="TOPLEFT"/>
          </Anchors>
        </Texture>
        <Texture atlas="_chatbubble-nineslice-edgebottom" horizTile="true" useAtlasSize="true">
          <Anchors>
            <Anchor point="BOTTOMLEFT" relativeKey="$parent.BottomLeft" relativePoint="BOTTOMRIGHT"/>
            <Anchor point="BOTTOMRIGHT" relativeKey="$parent.BottomRight" relativePoint="BOTTOMLEFT"/>
          </Anchors>
        </Texture>
        <Texture atlas="!chatbubble-nineslice-edgeleft" vertTile="true" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent.TopLeft" relativePoint="BOTTOMLEFT"/>
            <Anchor point="BOTTOMLEFT" relativeKey="$parent.BottomLeft" relativePoint="TOPLEFT"/>
          </Anchors>
        </Texture>
        <Texture atlas="!chatbubble-nineslice-edgeright" vertTile="true" useAtlasSize="true">
          <Anchors>
            <Anchor point="TOPRIGHT" relativeKey="$parent.TopRight" relativePoint="BOTTOMRIGHT"/>
            <Anchor point="BOTTOMRIGHT" relativeKey="$parent.BottomRight" relativePoint="TOPRIGHT"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>
        self:SetAutoFocus(false)
      </OnLoad>
    </Scripts>
    <FontString inherits="ChatFontNormal"/>
  </EditBox>
</Ui>